<div class="col-md-12">
  <div >
    <%= link_to("New message", new_admin_message_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
      </tr>
    </thead>
    <tbody>
      <% @messages.each do |message| %>
        <tr>
          <td>#</td>
          <td><%= link_to(message.title, admin_message_path(message)) %></td>
          <td>
              <%= link_to("Edit", edit_admin_message_path(message), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", admin_message_path(message),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
